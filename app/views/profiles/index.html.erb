<main class="prof-main" role="main">
  <div class="main-prof">
    <header class="prof-header">
      <div class="header-prof-left">
        <div class="header-prof-pic-1">
          <div class="header-prof-pic-2">プロフ写真が来る</div>
        </div>
      </div>
      <section class="header-prof-right">
        <div class="prof-right-top">
          <%= link_to "ユーザー名",,class:"prof-username"%>

          <%= link_to 'プロフィールの編集', ,class:"prof-edit-btn"%>

          </div>
          <ul class="prof-status">
            <li class="prof-status-1">
              <span class="prof-status-tweet">
